<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <ImageView
        android:id="@+id/img_menu_item"
        android:layout_width="@dimen/menu_size_vertical"
        android:layout_height="@dimen/menu_size_vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/extra_margin"
        android:layout_marginBottom="@dimen/extra_margin"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/txt_title_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/extra_margin"
        android:layout_marginBottom="@dimen/extra_margin"
        android:layout_toEndOf="@+id/img_menu_item"
        android:layout_toRightOf="@+id/img_menu_item"
        android:paddingStart="@dimen/menu_text_padding"
        android:paddingLeft="@dimen/menu_text_padding"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/menu_text_size"
        android:visibility="gone" />

</RelativeLayout>